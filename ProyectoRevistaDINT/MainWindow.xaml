<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoRevistaDINT"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="ProyectoRevistaDINT.MainWindow"
        mc:Ignorable="d"
        Title="ProyectoRevistaDINT" Height="450" Width="800" Icon="Recursos/revistaIcono.png" MinHeight="350" MinWidth="550">
    <DockPanel LastChildFill="True">

        <syncfusion:MenuAdv DockPanel.Dock="Top" Background="White">
            <syncfusion:MenuItemAdv Header="Gestion Autores" Command="{Binding Path=comandoGestionAutores}">
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Gestión Artículos" Command="{Binding Path=comandoGestionArticulos}">
                <syncfusion:MenuItemAdv Header="Crear Articulo" Command="{Binding Path=comandoCrearArticulo}">
                </syncfusion:MenuItemAdv>
                <syncfusion:MenuItemAdv Header="Lista Articulos" Command="{Binding Path=comandoGestionArticulos}">
                </syncfusion:MenuItemAdv>
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Publicación">
                <syncfusion:MenuItemAdv Header="Publicar Artículos"/>
                <syncfusion:MenuItemAdv Header="Generar Revista" />
            </syncfusion:MenuItemAdv>
            <syncfusion:MenuItemAdv Header="Gestión de palabras prohibidas"/>

            <syncfusion:MenuItemAdv/>
        </syncfusion:MenuAdv>
        <UserControl Content="{Binding ContenidoMostrar}" Margin="3">

        </UserControl>
    </DockPanel>
</Window>

<UserControl x:Class="ProyectoRevistaDINT.Vistas.GestionAutores.GestionAutores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoRevistaDINT.Vistas.GestionAutores"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,5,15,5"/>
        </Style>
    </UserControl.Resources>
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Command="{Binding Path=ComandoCrearAutor}">Crear</Button>
            <Button Command="{Binding Path=ComandoEditarAutor}">Editar</Button>
            <Button Command="{Binding Path=ComandoEliminarAutor}">Eliminar</Button>
        </StackPanel>
        <syncfusion:SfDataGrid ItemsSource="{Binding Autores, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding AutorSeleccionado}" AllowFiltering="True" ColumnSizer="Star"/>
    </DockPanel>
</UserControl>
